{
  "name": "iocane",
  "version": "1.0.0",
  "description": "Textual encryption library",
  "main": "source/index.js",
  "scripts": {
    "docs": "jsdoc2md source/**/*.js > API.md",
    "format": "prettier --write '{source,test}/**/*.js'",
    "precommit": "lint-staged",
    "test": "run-s test:coverage test:format",
    "test:coverage": "nyc --reporter=text mocha -r test/index.js 'test/{unit,integration}/**/*.spec.js' && nyc check-coverage --lines 95 --functions 95",
    "test:format": "prettier-check '{source,test}/**/*.js'",
    "test:integration": "mocha -r test/index.js 'test/integration/**/*.spec.js'",
    "test:unit": "mocha -r test/index.js 'test/unit/**/*.spec.js'",
    "test:unit:watch": "nodemon --exec 'npm run test:unit'"
  },
  "lint-staged": {
    "{source,test}/**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/perry-mitchell/iocane.git"
  },
  "keywords": [
    "crypto",
    "encrypt",
    "decrypt",
    "encryption",
    "buttercup",
    "text"
  ],
  "author": "Perry Mitchell <perry@perrymitchell.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/perry-mitchell/iocane/issues"
  },
  "homepage": "https://github.com/perry-mitchell/iocane#readme",
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "husky": "^0.14.3",
    "jsdoc-to-markdown": "^4.0.1",
    "lint-staged": "^7.0.2",
    "mocha": "^5.0.5",
    "nodemon": "^1.17.3",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.6.0",
    "prettier": "^1.11.1",
    "prettier-check": "^2.0.0",
    "sinon": "^4.5.0"
  },
  "dependencies": {
    "pbkdf2": "~3.0.4"
  }
}
