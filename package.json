{
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"lint": "xo && stylelint app/renderer/**/*.scss",
		"test": "npm run lint",
		"start": "webpack && electron app",
		"dev:watch": "webpack-dev-server --hot",
		"dev:start": "sleep 1 && electron app",
		"dev": "run-p dev:*",
		"pack": "webpack && electron-builder --dir",
		"dist": "webpack --mode=production && electron-builder --mac --linux --win",
		"release": "np --no-publish"
	},
	"dependencies": {
		"bip39": "^2.5.0",
		"delay": "^2.0.0",
		"jquery": "^3.2.1",
		"lodash": "^4.17.4",
		"p-queue": "^2.3.0",
		"randoma": "^1.2.0",
		"react": "^16.2.0",
		"react-dom": "^16.2.0",
		"react-extras": "^0.5.0",
		"react-select": "^1.2.1",
		"sass-extras": "^0.3.0",
		"unstated": "^1.0.3"
	},
	"devDependencies": {
		"babel-core": "^6.26.0",
		"babel-eslint": "^8.2.1",
		"babel-loader": "^7.1.3",
		"babel-plugin-transform-class-properties": "^6.24.1",
		"babel-preset-react": "^6.24.1",
		"babel-preset-stage-3": "^6.24.1",
		"clean-webpack-plugin": "^0.1.18",
		"copy-webpack-plugin": "^4.4.2",
		"css-loader": "^0.28.10",
		"devtron": "^1.4.0",
		"electron": "^1.8.2",
		"electron-builder": "^19.54.0",
		"electron-react-devtools": "^0.5.3",
		"electron-reloader": "^0.2.0",
		"eslint-config-xo-react": "^0.16.0",
		"eslint-plugin-react": "^7.6.1",
		"file-loader": "^1.1.6",
		"node-sass": "^4.7.2",
		"np": "^2.18.2",
		"npm-run-all": "^4.1.2",
		"react-hot-loader": "^4.0.0-rc.0",
		"sass-loader": "^6.0.6",
		"style-loader": "^0.19.1",
		"stylelint": "^9.1.1",
		"stylelint-config-xo-scss": "^0.3.0",
		"webpack": "^4.0.0",
		"webpack-cli": "^2.0.9",
		"webpack-dev-server": "^3.0.0",
		"xo": "^0.20.0"
	},
	"xo": {
		"parser": "babel-eslint",
		"envs": [
			"node",
			"browser"
		],
		"extends": "xo-react",
		"rules": {
			"import/no-extraneous-dependencies": "off",
			"import/no-unassigned-import": "off",
			"import/no-unresolved": "off",
			"comma-dangle": [
				"error",
				"always-multiline"
			],
			"unicorn/filename-case": "off",
			"react/prop-types": "off",
			"import/exports-last": "error",
			"no-undef": "off",
			"react/no-unused-state": "off",
			"node/no-unpublished-require": "off"
		}
	},
	"stylelint": {
		"extends": "stylelint-config-xo-scss",
		"rules": {
			"property-blacklist": null,
			"max-nesting-depth": null,
			"selector-max-compound-selectors": null,
			"declaration-block-no-redundant-longhand-properties": null
		}
	},
	"build": {
		"files": [
			"**/*",
			"!renderer${/*}"
		],
		"asarUnpack": [
			"marketmaker/bin"
		],
		"appId": "com.lukechilds.hyperdex",
		"mac": {
			"category": "public.app-category.finance",
			"electronUpdaterCompatibility": ">=2.18.0"
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb",
				"rpm"
			]
		}
	}
}
