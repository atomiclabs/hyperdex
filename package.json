{
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"lint": "xo && stylelint 'app/renderer/**/*.scss'",
		"test": "npm run lint",
		"start": "webpack && electron app",
		"dev:watch": "webpack-dev-server --hot",
		"dev:start": "delay 1 && electron app",
		"dev": "yarn && run-p dev:*",
		"pack": "webpack && electron-builder --dir",
		"dist": "webpack --mode=production && electron-builder --mac --linux --win",
		"release": "np --no-publish"
	},
	"dependencies": {
		"bip39": "^2.5.0",
		"coinlist": "^1.1.3",
		"crypto-hash": "^0.1.0",
		"cycled": "^0.2.0",
		"date-fns": "^1.29.0",
		"delay": "^2.0.0",
		"emittery": "^0.3.0",
		"lodash": "^4.17.10",
		"modern-normalize": "^0.4.0",
		"p-any": "^1.1.0",
		"p-event": "^1.3.0",
		"p-queue": "^2.4.2",
		"pouchdb-browser": "^6.4.3",
		"pouchdb-find": "^6.4.3",
		"qrcode.react": "^0.8.0",
		"randoma": "^1.2.0",
		"react": "^16.3.2",
		"react-dom": "^16.3.2",
		"react-extras": "^0.6.0",
		"react-select": "^1.2.1",
		"read-blob": "^1.1.0",
		"recharts": "^1.0.0-beta.10",
		"round-to": "^3.0.0",
		"sass-extras": "^0.3.0",
		"title": "^3.2.0",
		"unstated": "^2.0.3",
		"unstated-debug": "^0.2.0"
	},
	"devDependencies": {
		"babel-core": "^6.26.3",
		"babel-eslint": "^8.2.3",
		"babel-loader": "^7.1.4",
		"babel-plugin-syntax-dynamic-import": "^6.18.0",
		"babel-plugin-transform-class-properties": "^6.24.1",
		"babel-preset-react": "^6.24.1",
		"babel-preset-stage-3": "^6.24.1",
		"clean-webpack-plugin": "^0.1.19",
		"copy-webpack-plugin": "^4.5.1",
		"cryptocurrency-icons": "cjdowner/cryptocurrency-icons#68877c336de5f5cd69dc46de546edfde5331a148",
		"css-loader": "^0.28.11",
		"delay-cli": "^1.0.0",
		"devtron": "^1.4.0",
		"electron": "^2.0.0",
		"electron-builder": "^20.13.3",
		"electron-react-devtools": "^0.5.3",
		"electron-reloader": "^0.2.0",
		"eslint-config-xo-react": "^0.16.0",
		"eslint-plugin-react": "^7.6.1",
		"file-loader": "^1.1.11",
		"node-sass": "^4.9.0",
		"np": "^2.18.2",
		"npm-run-all": "^4.1.3",
		"react-hot-loader": "^4.1.3",
		"sass-loader": "^7.0.1",
		"style-loader": "^0.21.0",
		"stylelint": "^9.2.0",
		"stylelint-config-xo-scss": "^0.5.0",
		"webpack": "^4.8.1",
		"webpack-cli": "^2.1.3",
		"webpack-dev-server": "^3.1.4",
		"xo": "^0.21.0"
	},
	"xo": {
		"nodeVersion": ">=8",
		"parser": "babel-eslint",
		"envs": [
			"node",
			"browser"
		],
		"extends": "xo-react",
		"rules": {
			"import/no-extraneous-dependencies": "off",
			"import/no-unassigned-import": "off",
			"import/no-unresolved": "off",
			"comma-dangle": [
				"error",
				"always-multiline"
			],
			"unicorn/filename-case": "off",
			"import/exports-last": "error",
			"react/prop-types": "off"
		}
	},
	"stylelint": {
		"extends": "stylelint-config-xo-scss"
	},
	"build": {
		"files": [
			"**/*",
			"!renderer${/*}",
			"!marketmaker/bin/*",
			"marketmaker/bin/${os}"
		],
		"asarUnpack": [
			"marketmaker/bin"
		],
		"appId": "com.lukechilds.hyperdex",
		"mac": {
			"category": "public.app-category.finance",
			"electronUpdaterCompatibility": ">=2.15.0"
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"snap",
				"deb",
				"rpm"
			]
		}
	}
}
