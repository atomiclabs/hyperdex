{
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"test": "xo",
		"start": "webpack && electron app",
		"dev:watch": "webpack-dev-server --hot",
		"dev:start": "electron app",
		"dev": "run-p dev:*",
		"pack": "webpack && electron-builder --dir",
		"dist": "NODE_ENV=production webpack && electron-builder --mac --linux --win",
		"release": "np --no-publish"
	},
	"dependencies": {
		"jquery": "^3.2.1",
		"lodash": "^4.17.4",
		"p-queue": "^2.3.0",
		"popper.js": "1.12.6",
		"react": "^16.2.0",
		"react-blockies": "^1.2.2",
		"react-dom": "^16.2.0",
		"react-extras": "^0.3.0",
		"react-router-dom": "^4.2.2",
		"react-router-util": "^0.5.1",
		"reactsymbols-kit": "file:vendor/reactsymbols-kit"
	},
	"devDependencies": {
		"babel-core": "^6.26.0",
		"babel-eslint": "^8.2.1",
		"babel-loader": "^7.1.2",
		"babel-plugin-transform-class-properties": "^6.24.1",
		"babel-preset-react": "^6.24.1",
		"babel-preset-stage-3": "^6.24.1",
		"clean-webpack-plugin": "^0.1.17",
		"copy-webpack-plugin": "^4.2.3",
		"css-loader": "^0.28.8",
		"devtron": "^1.4.0",
		"electron": "^1.7.10",
		"electron-builder": "^19.54.0",
		"electron-reloader": "^0.2.0",
		"eslint-config-xo-react": "^0.15.0",
		"eslint-plugin-react": "^7.5.1",
		"file-loader": "^1.1.6",
		"node-env-webpack-plugin": "^1.0.0",
		"node-sass": "^4.7.2",
		"np": "^2.18.2",
		"npm-run-all": "^4.1.2",
		"react-hot-loader": "^4.0.0-beta.18",
		"sass-loader": "^6.0.6",
		"style-loader": "^0.19.1",
		"webpack": "^3.10.0",
		"webpack-dev-server": "^2.11.1",
		"xo": "^0.18.2"
	},
	"xo": {
		"parser": "babel-eslint",
		"envs": [
			"node",
			"browser"
		],
		"extends": "xo-react",
		"rules": {
			"import/no-extraneous-dependencies": "off",
			"import/no-unassigned-import": "off",
			"import/no-unresolved": "off",
			"unicorn/no-abusive-eslint-disable": "off",
			"comma-dangle": [
				"error",
				"always-multiline"
			]
		}
	},
	"build": {
		"files": [
			"**/*",
			"!renderer${/*}"
		],
		"asarUnpack": [
			"marketmaker/bin"
		],
		"appId": "com.lukechilds.hyperdex",
		"mac": {
			"category": "public.app-category.finance",
			"electronUpdaterCompatibility": ">=2.18.0"
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb",
				"rpm"
			]
		}
	}
}
