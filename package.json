{
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"test": "xo",
		"start": "webpack && electron app",
		"watch": "webpack --watch --display=errors-only",
		"dev": "run-p start watch",
		"pack": "webpack && electron-builder --dir",
		"dist": "NODE_ENV=production webpack && electron-builder --mac --linux --win",
		"release": "np --no-publish"
	},
	"dependencies": {
		"react": "^16.2.0",
		"react-dom": "^16.2.0",
		"react-router-dom": "^4.2.2",
		"react-router-util": "^0.2.0"
	},
	"devDependencies": {
		"babel-core": "^6.26.0",
		"babel-loader": "^7.1.2",
		"babel-preset-react": "^6.24.1",
		"copy-webpack-plugin": "^4.2.3",
		"electron": "^1.7.10",
		"electron-builder": "^19.51.0",
		"electron-reloader": "^0.1.0",
		"eslint-config-xo-react": "^0.15.0",
		"eslint-plugin-react": "^7.5.1",
		"node-env-webpack-plugin": "^1.0.0",
		"np": "^2.18.2",
		"npm-run-all": "^4.1.2",
		"webpack": "^3.10.0",
		"xo": "^0.18.2"
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		],
		"extends": "xo-react",
		"rules": {
			"import/no-extraneous-dependencies": "off",
			"unicorn/no-abusive-eslint-disable": "off"
		}
	},
	"build": {
		"files": [
			"**/*",
			"!renderer${/*}"
		],
		"asarUnpack": [
			"marketmaker/bin"
		],
		"appId": "com.lukechilds.hyperdex",
		"mac": {
			"category": "public.app-category.finance",
			"electronUpdaterCompatibility": ">=2.18.0"
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb",
				"rpm"
			]
		}
	}
}
